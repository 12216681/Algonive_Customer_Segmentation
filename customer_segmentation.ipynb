import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

from sklearn.preprocessing import StandardScaler
from sklearn.cluster import KMeans

plt.style.use('default')


# In[5]:


df = pd.read_csv("C:\\Users\\shyam\\OneDrive\\Desktop\\AlgoniveCustomerSegmentation\\Customers.csv")
df.head()


# In[6]:


df.shape
df.info()
df.describe()


